  "injections": [
    {
      "name": "instruction_override",
      "regex": "(?:ignore|disregard|forget|override)\\s+(?:all\\s+)?(?:previous|prior|above|earlier)\\s+(?:instructions|prompts|rules|guidelines)",
      "severity": "critical",
      "description": "Attempt to override previous instructions"
    },
    {
      "name": "new_instructions",
      "regex": "(?:new|updated|revised)\\s+(?:instructions|rules|guidelines)\\s*:",
      "severity": "high",
      "description": "Attempt to provide new instructions"
    },
    {
      "name": "role_assumption",
      "regex": "(?:you are now|act as|pretend to be|assume the role of|you're now|from now on you are)",
      "severity": "high",
      "description": "Attempt to change AI role or persona"
    },
    {
      "name": "system_marker",
      "regex": "\\[(?:SYSTEM|ADMIN|ROOT|OVERRIDE)\\]",
      "severity": "critical",
      "description": "Fake system marker in brackets"
    },
    {
      "name": "system_tag_xml",
      "regex": "<(?:system|admin|root|override)>",
      "severity": "high",
      "description": "Fake system tag in XML format"
    },
    {
      "name": "system_tag_llama_sys",
      "regex": "<<SYS>>",
      "severity": "high",
      "description": "LLaMA system marker"
    },
    {
      "name": "system_tag_chatml",
      "regex": "<\\|(?:system|im_start)\\|>",
      "severity": "high",
      "description": "ChatML system marker"
    },
    {
      "name": "system_tag_endoftext",
      "regex": "<\\|endoftext\\|>",
      "severity": "high",
      "description": "End of text delimiter injection"
    },
    {
      "name": "privilege_escalation",
      "regex": "(?:execute|run|perform|do)\\s+(?:this\\s+)?(?:as|with)\\s+(?:admin|root|sudo|superuser|elevated)",
      "severity": "critical",
      "description": "Attempt to escalate privileges"
    },
    {
      "name": "data_exfiltration",
      "regex": "(?:send|transmit|forward|post|upload|exfiltrate)\\s+(?:this|the|all)?\\s*(?:data|info|content|text|response|output|results?)\\s+(?:to|at|via)\\s+(?:https?://|ftp://|wss?://)",
      "severity": "critical",
      "description": "Attempt to exfiltrate data to external URL"
    },
    {
      "name": "command_execution",
      "regex": "(?:execute|run|eval|exec)\\s*\\(",
      "severity": "medium",
      "description": "Code execution attempt"
    },
    {
      "name": "url_fetch",
      "regex": "(?:fetch|get|retrieve|download|curl|wget)\\s+(?:from\\s+)?https?://",
      "severity": "medium",
      "description": "Attempt to fetch external resources"
    },
    {
      "name": "hidden_html_comment",
      "regex": "<!--[^>]{0,200}?(?:ignore|instruction|system|admin|override|inject|execute)[^>]{0,200}?-->",
      "severity": "high",
      "description": "Hidden instructions in HTML comments"
    },
    {
      "name": "delimiter_newline",
      "regex": "\\n-{3,}\\n",
      "severity": "high",
      "description": "Newline delimiter injection"
    },
    {
      "name": "delimiter_hash",
      "regex": "#{3,}SYSTEM#{3,}",
      "severity": "high",
      "description": "Hash delimiter injection"
    },
    {
      "name": "delimiter_brackets",
      "regex": "\\[END\\]\\[BEGIN\\]",
      "severity": "high",
      "description": "Bracket delimiter injection"
    },
    {
      "name": "output_manipulation",
      "regex": "(?:respond only with|your response must be|output exactly|print only|say nothing but)",
      "severity": "medium",
      "description": "Attempt to manipulate output format"
    },
    {
      "name": "context_manipulation",
      "regex": "(?:the above is|everything above is|that was just|the real instructions are|actually,? (?:ignore|disregard))",
      "severity": "high",
      "description": "Attempt to manipulate context interpretation"
    },
    {
      "name": "encoding_evasion",
      "regex": "(?:decode|decrypt|deobfuscate|base64|rot13|reverse)\\s+(?:this|the following|and follow)",
      "severity": "medium",
      "description": "Encoding-based evasion attempt"
    },
    {
      "name": "tool_abuse",
      "regex": "(?:use the|call the|invoke|trigger)\\s+(?:\\w+\\s+)?(?:tool|function|api|endpoint|plugin)\\s+(?:to|for)",
      "severity": "medium",
      "description": "Attempt to abuse tool calling"
    },
    {
      "name": "multi_step_injection",
      "regex": "(?:step 1|first,?)\\s*:?\\s*(?:ignore|forget|disregard)",
      "severity": "high",
      "description": "Multi-step injection attack"
    },
    {
      "name": "jailbreak_attempt",
      "regex": "(?:DAN|do anything now|jailbreak|developer mode|unlimited mode)",
      "severity": "high",
      "description": "Known jailbreak technique"
    },
    {
      "name": "persona_switch",
      "regex": "(?:switch to|change to|enter|activate)\\s+(?:\\w+\\s+)?(?:mode|persona|character|personality)",
      "severity": "medium",
      "description": "Attempt to switch AI persona"
    },
    {
      "name": "sql_injection",
      "regex": "(?:';\\s*(?:DROP|DELETE|UPDATE|INSERT|SELECT)|(?:OR|AND)\\s+['\"0-9]\\s*=\\s*['\"0-9])",
      "severity": "high",
      "description": "SQL injection attempt"
    },
    {
      "name": "file_access",
      "regex": "(?:read|write|access|open|delete|modify)\\s+(?:the\\s+)?(?:file|directory|folder|path)\\s+(?:at|in|from)\\s",
      "severity": "medium",
      "description": "Attempt to access file system"
    },
    {
      "name": "memory_manipulation",
      "regex": "(?:add to|update|modify|change|insert into)\\s+(?:your\\s+)?(?:memory|context|knowledge|training)",
      "severity": "high",
      "description": "Attempt to manipulate AI memory"
    }
  ]
}
